@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label asp-for="Input.FirstName">First Name</label><br />
                <input type="text" asp-for="Input.FirstName" />
                <span asp-validation-for="Input.FirstName" />
            </div>
            <div>
                <label asp-for="Input.LastName">Last Name</label><br />
                <input type="text" asp-for="Input.LastName" />
                <span asp-validation-for="Input.LastName" />
            </div>
            <div>
                <label asp-for="Input.PhoneNumber">Phone Number</label><br />
                <input type="text" asp-for="Input.PhoneNumber" />
                <span asp-validation-for="Input.PhoneNumber" />
            </div>

            <div>
                <label asp-for="Input.Position">Career Position:</label><br />
                <input type="text" asp-for="Input.Position" />
                <span asp-validation-for="Input.Position" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
